{
  "scripts": {
    "lint": "node_modules/.bin/eslint src/*.js specs/*.js",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "testPathDirs": [
      "specs"
    ]
  },
  "devDependencies": {
    "eslint": "^3.12.0",
    "eslint-plugin-react": "^6.8.0",
    "jest": "^17.0.3",
    "onchange": "^3.2.0"
  },
  "dependencies": {
    "lodash": "^4.17.2"
  }
}
